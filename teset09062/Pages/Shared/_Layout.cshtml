<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - teset09062</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/teset09062.styles.css" asp-append-version="true" />

    <style>
        /* Custom CSS to set initial button background colors */
        .btn-light-blue {
            background-color: #E1F9FF; /* Light blue color */
            color: white; /* Text color */
        }

        /* Custom CSS to change button color on hover */
        .btn-light-blue:hover {
                background-color: #EAF2FA; /* Light grey color on hover */
        }

        .nav-item {
            margin-right: 10px; /* Adjust the margin between buttons */

        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#C3DDFF border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">teset09062</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link btn btn-light-blue" asp-area="" asp-page="/Index">🏠Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-light-blue" asp-area="" asp-page="/Record">📑Records</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-light-blue" asp-area="" asp-page="/Contact">📞Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - teset09062 - <a asp-area="" asp-page="/Contact">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>